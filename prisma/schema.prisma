generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Enquiry {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  subject   String
  message   String
  isSolved  Boolean  @default(false)
  remarks   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tokens Token[]
  jobs   Job[]   @relation("AdminJobs")
  otpCodes        OTPCode[]
}

model Token {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  token       String
  type        TokenType
  expires     DateTime
  lastUsedAt  DateTime?
  blacklisted Boolean   @default(false)
  createdAt   DateTime  @default(now())
  userId      String    @db.ObjectId
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

model Job {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  company     String
  location    String
  experience  String
  salary      String
  description String

  createdBy String @db.ObjectId
  admin     User   @relation("AdminJobs", fields: [createdBy], references: [id])

  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  JobApplication JobApplication[]

  @@index([createdBy])
}

enum Role {
  ADMIN
}

enum TokenType {
  REFRESH
}

model JobApplication {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  jobId String @db.ObjectId
  job   Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)

  fullName          String
  email             String
  mobile            String
  alternateMobile   String?
  preferredJobTitle String?
  preferredLocation String?
  expectedSalary    String?
  totalExperience   String?
  resumeUrl         String?

  createdAt DateTime @default(now())

  @@index([jobId])
  @@index([email])
}

model OTPCode {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  code      String
  expiresAt DateTime
  usedAt    DateTime?
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
}

